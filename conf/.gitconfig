[user]
	email = zhpooer@gmail.com
	name = poe
[push]
	default = simple
[color]
	ui = always
[color "status"]
	added     = green
	changed   = red
	untracked = magenta
[color "diff"]
	meta = yellow bold
	frag = magenta
	old  = red
	new  = green
[color "branch"]
	current = green
	local   = yellow
	remote  = cyan
[alias]
	s   = status
	ss  = status -s -b
	df  = diff
	p   = pull --rebase
	dfn = diff --name-only
	c   = commit -m
	ca  = commit -am
	aa  = add .
	b   = branch
	l   = log --oneline --decorate
	ls  = log --oneline --graph --decorate
	ll  = log --graph --decorate
	w   = show
[receive]
	denyCurrentBranch = ignore
